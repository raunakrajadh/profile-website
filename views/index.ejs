</head>

<body>
  <!-- <button type="button" class="mobile-nav-toggle d-xl-none"><i class="bi bi-list mobile-nav-toggle"></i></button> -->
  <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

  <!-- ======= Header ======= -->
  <header id="header" class="d-flex flex-column justify-content-center">

    <nav id="navbar" class="navbar nav-menu">
      <ul>
        <li><a href="#hero" class="nav-link scrollto"><i class="bx bx-home"></i> <span>Home</span></a></li>
        <li><a href="#skills" class="nav-link scrollto"><i class="bx bx-brain"></i> <span>Skills</span></a></li>
        <li><a href="#blogs" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Blogs</span></a></li>

        <% if(req.session.username == 'raunakrajadh'){ %>

          <li><a href="shorturl" class="nav-link scrollto"><i class="bx bx-link"></i> <span>Short URL</span></a></li>

        <% } %>

        <% if(req.session.isAuth){ %>
          
          <form id="logoutForm" method="POST" action="/user/logout">
            <li><a href="javascript:{}" onclick="document.getElementById('logoutForm').submit()" class="nav-link scrollto"><i class="bx bx-log-out"></i> <span>Logout</span></a></li>
          </form>
          
        <% } else{ %>

          <li><a href="/user/login" class="nav-link scrollto"><i class="bx bx-log-in"></i> <span>Login</span></a></li>

        <% } %>

      </ul>
    </nav>

  </header>
  <!-- End Header -->

  <!-- ======= Nav Section ======= -->
  <section id="hero" class="d-flex flex-column justify-content-center">
    <div class="container" data-aos="zoom-in" data-aos-delay="100">
      <h1>Raunak Raj Adhikari</h1>
      <p>I'm <span class="typed" data-typed-items="Studying, Learning, Developing"></span></p>

      <div class="social-links">
        <a href="/redirect/github" class="github"><i class="bx bxl-github"></i></a>
        <a href="/redirect/instagram" class="instagram"><i class="bx bxl-instagram"></i></a>
        <a href="/redirect/twitter" class="twitter"><i class="bx bxl-twitter"></i></a>
        <a href="/redirect/mydyno" class="link"><i class="bx bx-link"></i></a>
      </div>
    </div>
  </section>
  <!-- End Nav -->

  <main id="main">

    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Skills</h2>
        </div>

        <div class="row skills-content">

          <div class="col-lg-6">

            <div class="progress">
              <span class="skill">JAVA/C# (Game/App Development)<i class="val">45%</i></span>
              <div class="progress-bar-wrap">
                <div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
            
            <div class="progress">
              <span class="skill">C/C++ (Fundamentals)<i class="val">75%</i></span>
              <div class="progress-bar-wrap">
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>

          </div>

          <div class="col-lg-6">

            <div class="progress">
              <span class="skill">JS/PY (Backend)<i class="val">75%</i></span>
              <div class="progress-bar-wrap">
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>

            <div class="progress">
              <span class="skill">HTML/CSS (Frontend)<i class="val">50%</i></span>
              <div class="progress-bar-wrap">
                <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>

          </div>

        </div>

      </div>
    </section>
    <!-- End Skills Section -->

    <br><br><br><br>

    <!-- ======= Blogs Section ======= -->
    <section id="blogs" class="skills section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Blogs</h2>
        </div>

        <div class="container">

          <% if(req.session.username == 'raunakrajadh'){ %>

            <a href="/blogs/new" class="btn btn-success">New Blog</a>

          <% } %>
          
          <main class="container-fluid">
            <div class="container">
              
              <section class="text-center">
                <div class="row">

                  <% blogs.forEach((blog) => { %>

                    <div class="col-lg-4 col-md-6 mb-4">
                      <div class="card">

                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                          <img class="img-fluid">
                        </div>

                        <div class="card-body">
                          
                          <h4 class="card-title"><%= blog.title %></h4>
                          <div class="container card-body text-muted mb-2"><%= blog.createdAt %></div>
                          <p class="card-text"><%= blog.description %></p>

                          <a href="blogs/<%= blog.slug %>" class="btn btn-primary">Read More</a>

                          <% if(req.session.username == 'raunakrajadh'){ %>

                            <a href="blogs/edit/<%= blog.id %>" class="btn btn-info">Edit</a>
                            <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
                              <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
        
                          <% } %>
                          
                        </div>

                      </div>
                    </div>

                  <% }) %>
        
                </div>
              </section>

            </div>
          </main>
  
        </div>

      </div>

    </section>
    <!-- End Blogs Section -->

  </main>

  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container">
      <h3>@raunakrajadh</h3>
    </div>
  </footer>
  <!-- End Footer -->

  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <script src="../assets/vendor/aos/aos.js"></script>
  <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="../assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="../assets/vendor/php-email-form/validate.js"></script>
  <script src="../assets/vendor/purecounter/purecounter.js"></script>
  <script src="../assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="../assets/vendor/typed.js/typed.min.js"></script>
  <script src="../assets/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="../assets/js/main.js"></script>

</body>

</html>
